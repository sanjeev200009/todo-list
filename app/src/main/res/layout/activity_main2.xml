<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradenit"
    android:padding="16dp"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Section: Greeting and Avatar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Left ImageView -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/one" />

            <!-- TextView -->
            <TextView
                android:id="@+id/user_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profile_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="Hello!\nSanjeev"
                android:fontFamily="@font/font2"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_notification" />
        </RelativeLayout>

        <!-- Progress Card -->
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background_purple"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Task Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="8dp"
                android:text="Your today's task almost done!"
                android:fontFamily="@font/font2"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingLeft="70dp"/>

            <!-- Circular Progress Bar -->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp">

                <ProgressBar
                    android:id="@+id/progress_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_progress"
                    android:progress="85"
                    android:max="100"
                    android:layout_gravity="center" />

                <!-- Percentage Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="85%"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </RelativeLayout>

            <!-- View Task Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_background_white"
                android:text="View Task"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/font2"
                android:paddingHorizontal="16dp" />
        </LinearLayout>


        <!-- In Progress Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Progress"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font2"
            android:textSize="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Task Card 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_light"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grocery shopping app design"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Task Card 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_light_red"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uber Eats redesign challenge"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Task Groups -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Task Groups"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Task Progress List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Office Project -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Office Project"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    android:layout_gravity="end"
                    android:textColor="@color/gray"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!-- Personal Project -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Project"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52%"
                    android:layout_gravity="end"
                    android:textColor="@color/gray"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!-- Daily Study -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Study"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87%"
                    android:layout_gravity="end"
                    android:textColor="@color/gray"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Add Button -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/icc_add" />
    </LinearLayout>
</ScrollView>
